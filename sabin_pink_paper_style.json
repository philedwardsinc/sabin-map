{
  "version": 8,
  "name": "Sabin â€“ Studio Safe",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sources": {
    "composite": { "type": "vector", "url": "mapbox://mapbox.mapbox-streets-v8" }
  },
  "layers": [
    { "id": "background", "type": "background", "paint": { "background-color": "#efe9dc" }},

    { "id": "water", "type": "fill", "source": "composite", "source-layer": "water",
      "paint": { "fill-color": "#e6e1d6" }},

    { "id": "landuse-park", "type": "fill", "source": "composite", "source-layer": "landuse",
      "filter": ["==", "class", "park"],
      "paint": { "fill-color": "#ece6db" }},

    { "id": "landuse-cemetery", "type": "fill", "source": "composite", "source-layer": "landuse",
      "filter": ["==", "class", "cemetery"],
      "paint": { "fill-color": "#ece6db" }},

    { "id": "waterway", "type": "line", "source": "composite", "source-layer": "waterway",
      "paint": { "line-color": "#d7d2c7",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.2, 12, 0.6] }},

    { "id": "admin-bounds", "type": "line", "source": "composite", "source-layer": "admin",
      "filter": ["all", ["==", "maritime", 0], ["in", "admin_level", 1, 2]],
      "paint": {
        "line-color": "#111111",
        "line-opacity": 0.18,
        "line-dasharray": [2, 2],
        "line-width": ["interpolate", ["linear"], ["zoom"], 3, 0.2, 10, 1.2]
      }},

    { "id": "road-casing", "type": "line", "source": "composite", "source-layer": "road",
      "paint": {
        "line-color": "#bdb6aa",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.2, 10, 1.5, 14, 4]
      }},

    { "id": "road", "type": "line", "source": "composite", "source-layer": "road",
      "paint": {
        "line-color": "#cfc8bc",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.1, 10, 1.0, 14, 3]
      }},

    { "id": "aeroway", "type": "line", "source": "composite", "source-layer": "aeroway",
      "paint": { "line-color": "#ddd7cc",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0.2, 14, 1.2] }},

    { "id": "place-label", "type": "symbol", "source": "composite", "source-layer": "place_label",
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["Noto Serif Regular", "Noto Serif Italic"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 3, 9, 8, 14, 12, 18]
      },
      "paint": {
        "text-color": "#111111",
        "text-halo-color": "#efe9dc",
        "text-halo-width": 1.2
      }}
  ],
  "center": [0, 20],
  "zoom": 1.2,
  "id": "sabin-studio-safe"
}
